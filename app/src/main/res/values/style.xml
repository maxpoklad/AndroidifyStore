<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- fragment_home -->
    <style name="SliderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:layout_margin">@dimen/projectMargin</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="VisitBottomStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/projectMargin</item>
        <item name="android:background">@drawable/custom</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/didactgothicregular</item>
        <item name="android:text">@string/visit_our_categories</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleInCartAndFavorites">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/itemMargin</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/didactgothicregular</item>
        <item name="android:textSize">@dimen/text_size_in_item</item>
    </style>

    <style name="ButtonBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/projectMargin</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/didactgothicregular</item>
    </style>
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>